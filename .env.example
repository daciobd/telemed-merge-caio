# ============================
# Telemed Merge — Caio (.env.example)
# Copie para .env e preencha os valores reais
# ============================

# Ambiente
NODE_ENV=development
PORT=3000
APP_BASE_URL=http://localhost:3000

# Segurança / Sessão
JWT_SECRET=replace_me_with_strong_secret
SESSION_SECRET=replace_me_with_strong_secret

# Banco de dados / Cache
DATABASE_URL=postgres://user:pass@localhost:5432/telemed
REDIS_URL=redis://localhost:6379

# E-mail (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_user
SMTP_PASS=your_password
SMTP_FROM="Telemed <no-reply@telemed.example>"

# Integrações (placeholders)
ANVISA_API_URL=https://api.anvisa.example
ANVISA_API_KEY=replace_me
E_PRESCRIPTION_API_URL=https://prescription.example/api
E_PRESCRIPTION_API_KEY=replace_me

# Observabilidade
LOG_LEVEL=info
REQUEST_TIMEOUT_MS=30000

# CORS
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================
# Por serviço (prefixos)
# ============================

# Gateway / BFF
GATEWAY_PORT=4000
GATEWAY_CORS_ORIGINS=http://localhost:3000

# Frontend principal (Next/React)
FRONTEND_PORT=5173
FRONTEND_PUBLIC_API_URL=http://localhost:4000

# Auction service
AUCTION_PORT=4101
AUCTION_DATABASE_URL=postgres://user:pass@localhost:5432/telemed_auction

# Productivity service
PRODUCTIVITY_PORT=4102
PRODUCTIVITY_DATABASE_URL=postgres://user:pass@localhost:5432/telemed_productivity

# Internal service
INTERNAL_PORT=4103
INTERNAL_DATABASE_URL=postgres://user:pass@localhost:5432/telemed_internal

# Docs automation
DOCS_AUTOMATION_PORT=4104
DOCS_AUTOMATION_STORAGE_BUCKET=local://docs
DOCS_AUTOMATION_WEBHOOK_SECRET=replace_me

# Medical desk advanced
MEDICAL_DESK_PORT=4105
MEDICAL_DESK_API_URL=http://localhost:4105

# Deploy-ready (proxy para gateway quando necessário)
DEPLOY_READY_PUBLIC_API_URL=http://localhost:4000